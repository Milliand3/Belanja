<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/high"
    android:elevation="@dimen/mini"
    android:background="@color/colorFree"
    android:layout_margin="@dimen/small"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/NamaBarang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="NASI PADANG DEPAN ALFAMID"
        android:layout_toLeftOf="@+id/ivMenuBarang"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="@dimen/normal"
        android:textStyle="bold"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/NamaBarang">

    <TextView
        android:id="@+id/tvBarcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/normal"
        android:text="9196516814561768"
        />
    <TextView
        android:id="@+id/Category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category"
        />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivMenuBarang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_more_black"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>